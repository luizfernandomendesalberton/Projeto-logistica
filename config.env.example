# Configurações do Sistema de Logística de Estoque
# Copie este arquivo para .env e edite as configurações

# ==============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=logistica_estoque
DB_USER=root
DB_PASSWORD=ecalfma

# ==============================================
# CONFIGURAÇÕES DO SERVIDOR
# ==============================================
FLASK_ENV=development
FLASK_DEBUG=True
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# ==============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==============================================
SECRET_KEY=your-secret-key-here
SESSION_TIMEOUT_HOURS=8
REMEMBER_ME_DAYS=30

# ==============================================
# CONFIGURAÇÕES DE EMAIL (FUTURO)
# ==============================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ==============================================
# CONFIGURAÇÕES DE UPLOAD (FUTURO)
# ==============================================
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf

# ==============================================
# CONFIGURAÇÕES DE BACKUP
# ==============================================
BACKUP_FOLDER=backups
AUTO_BACKUP_ENABLED=False
BACKUP_RETENTION_DAYS=30

# ==============================================
# CONFIGURAÇÕES DE LOG
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ==============================================
# CONFIGURAÇÕES NFC
# ==============================================
NFC_ENABLED=True
NFC_TAG_PREFIX=LOGI_
NFC_USER_PREFIX=USER_
NFC_PRODUCT_PREFIX=PROD_